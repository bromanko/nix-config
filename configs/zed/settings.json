{
  "theme": "Catppuccin Mocha",
  "ui_font_size": 15,
  "relative_line_numbers": true,
  "buffer_font_size": 13,
  "buffer_font_family": "MonaspiceAr Nerd Font Propo",
  "vim_mode": true,
  "autosave": "on_focus_change",
  "language_overrides": {
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": []
        }
      }
    }
  }
}
